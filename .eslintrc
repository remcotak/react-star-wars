{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "react",
  ],
  "rules": {
    "arrow-body-style": "off",
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/react-in-jsx-scope": 2,
    "linebreak-style": "off"
  },
  "extends": ["airbnb-base"],
  "settings": {
    "import/resolver": {
      "webpack": {
        "paths": ["src"]
      }
    }
  }
}
